<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Skills">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/background">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/rhezaardiva"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RHEZA ARDHIVA"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WEB DEVELOPMENT"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="215dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="800dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            app:cardCornerRadius="10dp"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/skills"
                                    android:textAlignment="center"
                                    android:text="SKILLS"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="#000000"
                                    android:layout_marginTop="10dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="PROGRAMMING LANGUAGE"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_below="@id/skills"
                                    android:id="@+id/programminglanguage"/>
                                <View
                                    android:id="@+id/garis"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/programminglanguage"
                                    android:layout_marginTop="16dp"
                                    android:background="@android:color/darker_gray"/>

                                <!--HTML-->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/garis"
                                    android:id="@+id/html"
                                    android:text="HTML"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="10dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/garis"
                                    android:text="85%"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="viewEnd"/>
                                <ProgressBar
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_below="@id/html"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:id="@+id/pb1"
                                    android:layout_marginLeft="16dp"/>

                                <!--CSS-->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/css"
                                    android:text="CSS"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_below="@+id/pb1"
                                    android:layout_marginTop="10dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/pb1"
                                    android:text="80%"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="viewEnd"/>
                                <ProgressBar
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_below="@id/css"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:id="@+id/pb2"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"/>

                                <!--JAVASCRIPT-->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/js"
                                    android:text="JAVASCRIPT"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_below="@+id/pb2"
                                    android:layout_marginTop="10dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/pb2"
                                    android:text="78%"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="viewEnd"/>
                                <ProgressBar
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_below="@id/js"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:id="@+id/pb3"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"/>

                                <!--PHP-->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/php"
                                    android:text="PHP"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_below="@+id/pb3"
                                    android:layout_marginTop="10dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/pb3"
                                    android:text="75%"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="viewEnd"/>
                                <ProgressBar
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_below="@id/php"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:id="@+id/pb4"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"/>

                                <!--FRAMEWORK-->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="FRAMEWORK"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_below="@+id/pb4"
                                    android:layout_marginTop="20dp"
                                    android:id="@+id/framework"/>
                                <View
                                    android:id="@+id/garis2"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/framework"
                                    android:layout_marginTop="16dp"
                                    android:background="@android:color/darker_gray"/>

                                <!--LARAVEL-->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/laravel"
                                    android:text="LARAVEL"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_below="@+id/garis2"
                                    android:layout_marginTop="10dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/garis2"
                                    android:text="85%"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="viewEnd"/>
                                <ProgressBar
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_below="@id/laravel"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:id="@+id/pb5"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"/>

                                <!--CODEIGNITER-->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/codeigniter"
                                    android:text="CODEIGNITER"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_below="@+id/pb5"
                                    android:layout_marginTop="10dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/pb5"
                                    android:text="80%"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="viewEnd"/>
                                <ProgressBar
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_below="@id/codeigniter"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:id="@+id/pb6"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"/>

                                <!--DESIGN-->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="DESIGN"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_below="@+id/pb6"
                                    android:layout_marginTop="20dp"
                                    android:id="@+id/design"/>
                                <View
                                    android:id="@+id/garis3"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/design"
                                    android:layout_marginTop="16dp"
                                    android:background="@android:color/darker_gray"/>

                                <!--PHOTOSHOP-->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/photoshop"
                                    android:text="PHOTOSHOP"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_below="@+id/garis3"
                                    android:layout_marginTop="10dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/garis3"
                                    android:text="75%"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="viewEnd"/>
                                <ProgressBar
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_below="@id/photoshop"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:id="@+id/pb7"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"/>

                                <!--ILLUSTRATOR-->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/illustrator"
                                    android:text="ILLUSTRATOR"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_below="@+id/pb7"
                                    android:layout_marginTop="10dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/pb7"
                                    android:text="80%"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="viewEnd"/>
                                <ProgressBar
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_below="@id/illustrator"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:id="@+id/pb8"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"/>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>